  "communication": {
    "interface_type": "broker",
    "host": "localhost:15672",
    "user": "guest",
    "password": "guest",
    "exchange": "exchange_baby_monitor"
  },
  "scenarios": {
    "normal_scenario": [
      {
        "topic": "bm_info",
        "type": "status",
        "body": "*"
      }
    ],
    "exceptional_scenarios": {
      "tv_blocked": [
        {
          "topic": "stv_msg",
          "type": "notification",
          "body": "*"
        },
        {
          "topic": "stv_info",
          "type": "status",
          "body": {
            "block": true
          }
        }
      ]
    },
    "uncertainty_scenarios": {
      "tv_off": [
        {
          "topic": "stv_msg",
          "type": "notification",
          "body": "*"
        },
        {
          "topic": "bm_info",
          "type": "notification",
          "body": "*"
        },
        {
          "topic": "bm_info",
          "type": "notification",
          "body": "*"
        }
      ]
    }
  },
  "adaptation_strategies": "IF tv_blocked THEN ( ON SmartTV STATUS available ) IF tv_off THEN ( ON SmartLamp STATUS blink ), ( ON Assistant STATUS play )"
}